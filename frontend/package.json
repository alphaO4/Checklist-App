{
  "name": "feuerwehr-checklist-app",
  "version": "0.1.0",
  "description": "Vehicle Inspection Checklist App for German Fire Departments",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "concurrently \"tsc --watch\" \"npm run copy-assets:watch\"",
    "copy-assets": "copyfiles -u 1 \"src/**/*.html\" \"src/**/*.css\" dist/",
    "copy-assets:watch": "nodemon --watch src --ext html,css --exec \"npm run copy-assets\"",
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main/main.js && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "predev": "npm run build"
  },
  "keywords": [
    "electron",
    "feuerwehr",
    "checklist",
    "vehicle",
    "inspection"
  ],
  "author": "Feuerwehr Development Team",
  "license": "MIT",
  "build": {
    "appId": "de.feuerwehr.checklist",
    "productName": "Feuerwehr Fahrzeugpr√ºfung",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  }
}
