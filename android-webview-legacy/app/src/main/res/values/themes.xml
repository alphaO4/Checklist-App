<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FeuerwehrChecklist" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/feuerwehr_red</item>
        <item name="colorPrimaryDark">@color/feuerwehr_red_dark</item>
        <item name="colorAccent">@color/teal_200</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/feuerwehr_red_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.FeuerwehrChecklist.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/feuerwehr_red</item>
        <item name="android:statusBarColor">@color/feuerwehr_red</item>
        <item name="android:navigationBarColor">@color/feuerwehr_red</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>